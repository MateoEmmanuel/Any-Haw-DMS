		SET FoodName = Concat('Updated a food item | Food Name: ', OLD.Food_Name,", To: ", NEW.Food_Name);
	ELSE
		SET FoodName = Concat('Updated a food item | Food Name: ', OLD.Food_Name);
    END IF;
    
