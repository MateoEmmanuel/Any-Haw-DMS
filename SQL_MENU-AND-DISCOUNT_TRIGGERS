DELIMITER //

-- Insert Trigger for Image_List
CREATE TRIGGER InsertLog_ImageList
AFTER INSERT ON Image_List
FOR EACH ROW
BEGIN
    INSERT INTO System_Log (
        Action_Type, 
        Table_Name, 
        Affected_Row_ID, 
        Old_Data, 
        NEW_Data, 
        Full_Details
    ) 
    VALUES (
        'INSERT', 
        'Image_List', 
        NEW.Image_ID, 
        'N/A', 
        'NEW Image Inserted', 
        CONCAT(
            'Inserted NEW image | Image ID: ', NEW.Image_ID,
            ' | Action Done at (', DATE_FORMAT(NOW(), '%H:%i:%s - %m/%d/%Y'), ')'
        )
    );
END //

